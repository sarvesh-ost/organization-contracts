{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "files": ["contracts/*"]
    },
    "typeRoots": [
      "node_modules/@0xproject/typescript-typings/types",
      "node_modules/@types"
    ]
  },
  "include": ["interacts/*"],
  "files": [
    "generated-artifacts/Organization.json",
    "generated-artifacts/OrganizationInterface.json",
    "generated-artifacts/Organized.json"
  ],
  "references": [{ "path": "./contracts" }]
}
